<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#807F7F"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_shett"
        android:padding="20dp">

    <TextView
        android:id="@+id/uvd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Уведомления"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/text1"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="Публикации"
            app:layout_constraintTop_toBottomOf="@id/uvd"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/switch1"
            android:backgroundTint="@color/white"
           app:layout_constraintTop_toTopOf="@id/text1"
            android:background="#CFCDCD"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text2"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="Истории"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/switch2"
            android:background="#CFCDCD"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="@id/text2"
            app:layout_constraintTop_toBottomOf="@id/switch1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text3"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="IGTV"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/switch3"
            android:background="#CFCDCD"
            android:backgroundTint="@color/white"
             app:layout_constraintTop_toTopOf="@id/text3"
            app:layout_constraintTop_toBottomOf="@id/switch2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text4"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="Прямые эфиры"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch3"
            app:layout_constraintTop_toTopOf="@id/text4"
            android:background="@color/white"
            android:src="@drawable/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>