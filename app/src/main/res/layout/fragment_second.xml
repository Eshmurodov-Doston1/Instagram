<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SecondFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/clouse"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/c"
                app:layout_constraintTop_toTopOf="@id/clouse"
                app:layout_constraintLeft_toRightOf="@id/clouse"
                app:layout_constraintBottom_toBottomOf="@id/clouse"
                app:cardCornerRadius="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/image_milaya"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <TextView
                  app:layout_constraintTop_toTopOf="@id/c"
                app:layout_constraintBottom_toBottomOf="@id/c"
                app:layout_constraintLeft_toRightOf="@id/c"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="PDP IT-Academy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_second"
        app:layout_constraintTop_toBottomOf="@id/guide1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="90dp"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="150dp">
         <ImageView
             android:id="@+id/image_global"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/pdp_name_end"
        app:layout_constraintTop_toBottomOf="@id/card_second"
        app:layout_constraintLeft_toLeftOf="@id/card_second"
        app:layout_constraintRight_toRightOf="@id/card_second"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="pdpuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/instagram"
        app:layout_constraintTop_toBottomOf="@id/pdp_name_end"
        app:layout_constraintLeft_toLeftOf="@id/pdp_name_end"
        app:layout_constraintRight_toRightOf="@id/pdp_name_end"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/t"
        app:layout_constraintTop_toBottomOf="@id/instagram"
        app:layout_constraintLeft_toLeftOf="@id/instagram"
        app:layout_constraintRight_toRightOf="@id/instagram"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:text="      23 Тыс. подписчиков 548 публикаций
         Вы подписаны на этот аккауунт Instagram c "
        android:layout_width="375dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/year_2021"
        app:layout_constraintTop_toBottomOf="@id/t"
        app:layout_constraintLeft_toLeftOf="@id/t"
        app:layout_constraintRight_toRightOf="@id/t"
        android:textStyle="normal"
        android:text="2021 года"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profil_btn"
            app:layout_constraintTop_toBottomOf="@id/year_2021"
            app:layout_constraintLeft_toLeftOf="@id/year_2021"
            app:layout_constraintRight_toRightOf="@id/year_2021"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:text="Посмотретъ профилъ"
            android:textAllCaps="false"
            android:background="@drawable/card"
            android:layout_width="180dp"
            android:layout_height="35dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>